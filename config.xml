<widget xmlns     = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "io.tams.ULApps"
        version   = "5.4.2">

  <name>TAMS UL Mobile Apps</name>
  <description>
    A mobile app for UL. Collection of features to improve portability, efficiency and productivity. Currently includes Demo Equipment Status Request App and UL Customer Feeback App. Author: Umer Pasha
  </description>

  <author href="http://www.umerpasha.com" email="upasha@tams.com">
    Umer Pasha
  </author>


  <!-- Application start page-->
  <content src="index.html"/>
  <!-- Umer: Set this and comment above to run as a web app-->
  <!--<content src="http://tusspdev1wfe3/VirtualApps/busopswebs/TAMSULApps/index.html"/>-->
